@model NotesApp.Models.Note
@{
    ViewData["Title"] = "Delete Note";
}

<h2 class="text-danger mb-4">Confirm Deletion</h2>
<div class="card p-4 shadow-sm">
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Created:</strong> @Model.CreatedAt.ToString("f")</p>
    <p><strong>Content:</strong> @Model.Content</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>


